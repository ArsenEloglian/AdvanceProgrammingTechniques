<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewwynik"
            android:layout_width="match_parent"
            android:layout_height="150dp"
	    android:gravity="center"
	    android:text="taak"
            android:background="@android:color/background_light"
            android:textColor="@android:color/black"
            android:textSize="50sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/darker_gray"
                android:text="C"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonCLS"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/darker_gray"
                android:text="CLS"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonprocent"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttondzielenie"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="/"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonmnożenie"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="*"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonodejmowanie"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="-"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="+"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonprzecinek"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_purple"
                android:text="."
                android:textSize="24sp" />

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonwynik"
                android:layout_width="174dp"
                android:layout_height="90dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="="
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

